
import React, { useState } from 'react';
import { useApp } from '../store';

const ShippingRates: React.FC = () => {
  const { shippingRates, addRate, deleteRate } = useApp();
  const [formData, setFormData] = useState({
    province: '',
    carrier: '',
    deliveryPrice: 0,
    returnPrice: 0
  });

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    if (!formData.province || !formData.carrier) return;
    addRate(formData);
    setFormData({ province: '', carrier: '', deliveryPrice: 0, returnPrice: 0 });
  };

  return (
    <div className="p-8">
      <header className="mb-8">
        <h2 className="text-3xl font-bold text-slate-800">إدارة أسعار الشحن</h2>
        <p className="text-slate-500">ضبط أسعار شركات الشحن لكل محافظة لمقارنة التحصيلات</p>
      </header>

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {/* نموذج الإضافة */}
        <div className="bg-white p-6 rounded-3xl shadow-sm border border-slate-100 h-fit">
          <h3 className="font-bold text-lg mb-6 text-blue-600">إضافة سعر جديد</h3>
          <form onSubmit={handleSubmit} className="space-y-4">
            <div>
              <label className="block text-xs font-bold text-slate-500 mb-2">المحافظة</label>
              <input 
                type="text" 
                required
                className="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                value={formData.province}
                onChange={e => setFormData({...formData, province: e.target.value})}
              />
            </div>
            <div>
              <label className="block text-xs font-bold text-slate-500 mb-2">شركة الشحن</label>
              <input 
                type="text" 
                required
                className="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                value={formData.carrier}
                onChange={e => setFormData({...formData, carrier: e.target.value})}
              />
            </div>
            <div className="grid grid-cols-2 gap-4">
              <div>
                <label className="block text-xs font-bold text-slate-500 mb-2">سعر التوصيل</label>
                <input 
                  type="number" 
                  className="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                  value={formData.deliveryPrice}
                  onChange={e => setFormData({...formData, deliveryPrice: Number(e.target.value)})}
                />
              </div>
              <div>
                <label className="block text-xs font-bold text-slate-500 mb-2">سعر المرتجع</label>
                <input 
                  type="number" 
                  className="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                  value={formData.returnPrice}
                  onChange={e => setFormData({...formData, returnPrice: Number(e.target.value)})}
                />
              </div>
            </div>
            <button className="w-full bg-blue-600 text-white py-3 rounded-xl font-bold shadow-lg shadow-blue-200 hover:bg-blue-700 transition-all">
              حفظ السعر
            </button>
          </form>
        </div>

        {/* الجدول */}
        <div className="lg:col-span-2 bg-white rounded-3xl shadow-sm border border-slate-100 overflow-hidden">
          <table className="w-full text-right">
            <thead className="bg-slate-50 text-slate-500 text-xs">
              <tr>
                <th className="px-6 py-4">المحافظة</th>
                <th className="px-6 py-4">شركة الشحن</th>
                <th className="px-6 py-4">سعر التوصيل</th>
                <th className="px-6 py-4">سعر المرتجع</th>
                <th className="px-6 py-4">حذف</th>
              </tr>
            </thead>
            <tbody className="divide-y divide-slate-100">
              {shippingRates.length === 0 ? (
                <tr><td colSpan={5} className="px-6 py-10 text-center text-slate-400 italic">لا توجد أسعار مضافة</td></tr>
              ) : shippingRates.map(rate => (
                <tr key={rate.id} className="hover:bg-slate-50">
                  <td className="px-6 py-4 font-bold">{rate.province}</td>
                  <td className="px-6 py-4 text-slate-600">{rate.carrier}</td>
                  <td className="px-6 py-4 text-blue-600 font-bold">{rate.deliveryPrice} ج.م</td>
                  <td className="px-6 py-4 text-red-500 font-bold">{rate.returnPrice} ج.م</td>
                  <td className="px-6 py-4">
                    <button onClick={() => deleteRate(rate.id)} className="text-red-400 hover:text-red-600 transition-colors">
                      <span className="material-icons text-sm">delete</span>
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  );
};

export default ShippingRates;
