
import React, { useState } from 'react';

const ComparisonTool: React.FC = () => {
  const [internalIds, setInternalIds] = useState('');
  const [carrierIds, setCarrierIds] = useState('');
  const [differences, setDifferences] = useState<{ internalOnly: string[], carrierOnly: string[] } | null>(null);

  const handleCompare = () => {
    const list1 = internalIds.split(/[\s,]+/).filter(id => id.trim() !== '');
    const list2 = carrierIds.split(/[\s,]+/).filter(id => id.trim() !== '');

    const internalOnly = list1.filter(id => !list2.includes(id));
    const carrierOnly = list2.filter(id => !list1.includes(id));

    setDifferences({ internalOnly, carrierOnly });
  };

  return (
    <div className="p-8">
      <header className="mb-8">
        <h2 className="text-2xl font-bold text-slate-800">أداة مقارنة الشحنات</h2>
        <p className="text-slate-500">قارن أرقام الاوردرات الخاصة بك مع أرقام شركة الشحن لاكتشاف الفروقات</p>
      </header>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div className="bg-white p-6 rounded-3xl shadow-sm border border-slate-100">
          <label className="block text-sm font-bold text-slate-700 mb-3">أرقام الاوردرات الداخلية (SellMate)</label>
          <textarea 
            className="w-full h-48 p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm font-mono"
            placeholder="ضع أرقام الاوردرات هنا مفصولة بمسافة أو سطر جديد..."
            value={internalIds}
            onChange={(e) => setInternalIds(e.target.value)}
          />
        </div>
        <div className="bg-white p-6 rounded-3xl shadow-sm border border-slate-100">
          <label className="block text-sm font-bold text-slate-700 mb-3">أرقام الاوردرات من شركة الشحن</label>
          <textarea 
            className="w-full h-48 p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm font-mono"
            placeholder="ضع أرقام الاوردرات من تقرير الشركة هنا..."
            value={carrierIds}
            onChange={(e) => setCarrierIds(e.target.value)}
          />
        </div>
      </div>

      <div className="flex justify-center mb-10">
        <button 
          onClick={handleCompare}
          className="bg-blue-600 text-white px-10 py-3 rounded-2xl font-bold shadow-lg shadow-blue-200 hover:bg-blue-700 transition-all flex items-center space-x-2 space-x-reverse"
        >
          <span className="material-icons">compare</span>
          <span>بدء المقارنة</span>
        </button>
      </div>

      {differences && (
        <div className="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div className="bg-red-50 p-6 rounded-3xl border border-red-100">
            <h4 className="text-red-800 font-bold mb-4 flex items-center space-x-2 space-x-reverse">
              <span className="material-icons">error_outline</span>
              <span>موجودة في SellMate وغير موجودة عند الشركة ({differences.internalOnly.length})</span>
            </h4>
            <div className="max-h-60 overflow-y-auto space-y-1">
              {differences.internalOnly.map(id => (
                <div key={id} className="bg-white px-3 py-1 rounded-lg text-sm font-mono text-red-600 border border-red-50">{id}</div>
              ))}
              {differences.internalOnly.length === 0 && <p className="text-xs text-red-400 italic">لا توجد فروقات</p>}
            </div>
          </div>

          <div className="bg-orange-50 p-6 rounded-3xl border border-orange-100">
            <h4 className="text-orange-800 font-bold mb-4 flex items-center space-x-2 space-x-reverse">
              <span className="material-icons">help_outline</span>
              <span>موجودة عند الشركة وغير موجودة في SellMate ({differences.carrierOnly.length})</span>
            </h4>
            <div className="max-h-60 overflow-y-auto space-y-1">
              {differences.carrierOnly.map(id => (
                <div key={id} className="bg-white px-3 py-1 rounded-lg text-sm font-mono text-orange-600 border border-orange-50">{id}</div>
              ))}
              {differences.carrierOnly.length === 0 && <p className="text-xs text-orange-400 italic">لا توجد فروقات</p>}
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default ComparisonTool;
